<div class='container login-container'>
    <div class='row'>
        <div class='col-md-6 login-form-1'>
            <h3>Login</h3>
            <form class='form login-form'>
                <div class='form-group'>
                    <input
                        type='text'
                        class='form-control'
                        id='username-login'
                        placeholder='Username *'
                        value=''
                    />
                </div>
                <div class='form-group'>
                    <input
                        type='password'
                        class='form-control'
                        id='password-login'
                        placeholder='Password *'
                        value=''
                    />
                </div>
                <div class='form-group'>
                    <input
                        type='submit'
                        class='btnSubmit'
                        id='login-btn'
                        value='Login'
                    />
                </div>
            </form>
        </div>
        <div class='col-md-6 login-form-2'>
            <h3 id='create'>Create Account</h3>
            <form class='form signup-form'>
                <div class='form-group'>
                    <input
                        type='text'
                        class='form-control'
                        id='username-signup'
                        placeholder='Username *'
                        value=''
                    />
                </div>
                <div class='form-group'>
                    <input
                        type='password'
                        class='form-control'
                        id='password-signup'
                        placeholder='Password *'
                        value=''
                    />
                </div>
                <div class='form-group'>
                    <input type='submit' class='btnSubmit' value='Sign Up' />
                </div>
            </form>
        </div>
    </div>
</div>
