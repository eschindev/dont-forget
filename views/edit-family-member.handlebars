<h1>Edit {{familyMember.name}}</h1>

<div class='row'>
    <div class='mx-auto col-10 col-md-8 col-lg-6'>
        <form action='/target' class='dropzone'></form>
        <form
            class='form edit-family-member-form'
            data-friend-id='{{familyMember.friend.id}}'
        >

            <div class='form-group'>
                <label for='example'>Name</label>
                <input
                    type='text'
                    class='form-control'
                    id='name_input'
                    aria-describedby='emailHelp'
                    placeholder='Name'
                    value='{{familyMember.fam_name}}'
                />
            </div>

            <div class='form-group'>
                <label for='example'>Relationship</label>
                <input
                    type='text'
                    class='form-control'
                    id='relationship_input'
                    aria-describedby='emailHelp'
                    placeholder='Enter relationship'
                    value='{{familyMember.fam_rel}}'
                />
            </div>
            <div class='form-group'>
                <label for='example'>Birthday</label>
                <input
                    type='text'
                    class='form-control'
                    id='birthday_input'
                    placeholder='Enter birthday'
                    value='{{familyMember.birthday}}'
                />
            </div>
            <div class='input-group-append'>
                <button class='btn btn-outline-secondary' type='submit'>Save
                    Family Member</button>
            </div>
        </form>
    </div>
</div>
<script src='/edit-family-member.js'></script>