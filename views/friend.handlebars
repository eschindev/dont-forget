<body id='card-body' class='container-fluid'>
    {{!-- <div class='row justify-content-center'> --}}
        <div class="d-flex-row"
        <article id='card2'>
            <div class='p-2'>
                <figure>
                    {{#if friend.photo}}
                        <img src='{{friend.photo}}' height='200' width='200' />
                    {{else}}
                        <img
                            src='/images/defaultPhoto.jpg'
                            height='200'
                            width='200'
                        />
                    {{/if}}
                </figure>
                <h2
                    id='friend-name'
                    data-friend-id='{{friend.id}}'
                >{{friend.name}}</h2>
                {{#if friend.birthday}}
                    <p>Birthday: {{friend.birthday}}</p>
                {{/if}}
                {{#if friend.significant_other}}
                    <p>Significant Other: {{friend.significant_other}}</p>
                {{/if}}
                {{#if friend.phone}}
                    <p>Phone: {{friend.phone}}</p>
                {{/if}}
                {{#if friend.email}}
                    <p>Email: {{friend.email}}</p>
                {{/if}}
                {{#if friend.address}}
                    <p>Address: {{friend.address}}</p>
                {{/if}}
            </div>
        </article>
        </div>
        {{!-- <div class='col-5' id='right-side'> --}}
            <div class="flex-row-reverse">
            <div class='p-2'>
                <h3>Family Members</h3>
                <a
                    href='/familyMember/friend/{{friend.id}}/newFamilyMember'
                ><button class='btn btn-outline-primary5'>Add Family Member</button></a>
                <ul>
                    
                    {{#each friend.FamilyMembers as |familyMember|}}
                        <hr />
                        <li id='fam-list'>
                            <p>Name: {{familyMember.fam_name}}</p>
                            {{#if familyMember.fam_rel}}
                                <p>Relationship: {{familyMember.fam_rel}}</p>
                            {{/if}}
                            {{#if familyMember.birthday}}
                                <p>Birthday: {{familyMember.birthday}}</p>
                            {{/if}}
                            <a href='/familyMember/{{familyMember.id}}'><button
                                    class='btn'
                                    id='mini-family-btn'
                                >Edit</button></a>
                            <button
                                class='delete-button btn'
                                id='mini-family-btn'
                                data-family-member-id='{{familyMember.id}}'
                            >Delete</button>
                        </li>
                    {{/each}}
                </ul>
                <a href='/'><button
                        class='btn btn-outline-primary3'
                        {{! id='my-friend-list-button' }}
                    >My Friend List!</button></a>
                <button
                    class='btn btn-outline-primary3'
                    data-friend-id='{{friend.id}}'
                >Delete</button>
                <a href='/friend/{{friend.id}}/edit'><button
                        class='btn btn-outline-primary3'
                    >Edit</button></a>
            </div>
            </div>
    {{!-- </div> --}}
</body>
<script src='/delete-family-member.js'></script>
<script src='/delete-friend.js'></script>
<script src='/edit-friend.js'></script>