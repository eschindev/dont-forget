<body id='body'>
    <div class='container'>
        <div class='row'>
            <div class='content col-md-12' id='border-friend'>
                <h1 class='text-center' id='friend-list-title'>My Friends</h1>

                <ul class='team'>
                    {{#each friends as |friend|}}
                        <hr />
                        <li class='member co-funder' id='border'>
                            <div class='thumb'>
                                {{#if friend.photo}}
                                    <img
                                        src='{{friend.photo}}'
                                        height='200'
                                        width='200'
                                    />
                                {{else}}
                                    <img
                                        src='/images/defaultPhoto.jpg'
                                        height='200'
                                        width='200'
                                    />
                                {{/if}}
                            </div>
                            <div class='description'>
                                <a href='/friend/{{friend.id}}'><h3
                                    >{{friend.name}}</h3></a>
                                <p>Birthday: {{friend.birthday}}</p>
                                <p>Significant Other:
                                    {{friend.significant_other}}</p>
                                <p>Phone: {{friend.phone}}</p>
                                <a href='/friend/{{friend.id}}/edit'><button
                                        class='btn'
                                        id='mini-button'
                                    >edit</button></a>
                                <button
                                    class='delete-button btn'
                                    id='mini-button'
                                    data-friend-id='{{friend.id}}'
                                >delete</button>
                            </div>
                        </li>
                    {{/each}}
                </ul>

                {{! <div class='row'> }}
                <div class='form-group text-center'>
                    <a href='/friend'><button class='btn btn-primary4'>Add
                            Friend</button></a>
                </div>
                {{! </div> }}
            </div>
        </div>
    </div>

</body>
<script src='/logout.js'></script>
<script src='/delete-friend.js'></script>