<h1 id='add-new-family'>Add a new Family Member</h1>

<div class='row'>
    <div class='mx-auto col-10 col-md-8 col-lg-6'>
        <form action='/target' class='dropzone'></form>
        <form
            class='form add-family-member-form'
            data-friend-id='{{friend_id}}'
        >

            <div class='form-group'>
                <label for='example'>Name</label>
                <input
                    type='text'
                    class='form-control'
                    id='name_input'
                    aria-describedby='emailHelp'
                    placeholder='Name'
                />
            </div>

            <div class='form-group'>
                <label for='example'>Relationship</label>
                <input
                    type='text'
                    class='form-control'
                    id='relationship_input'
                    aria-describedby='emailHelp'
                    placeholder='Enter relationship'
                />
            </div>
            <div class='form-group'>
                <label for='example'>Birthday</label>
                <input
                    type='text'
                    class='form-control'
                    id='birthday_input'
                    placeholder='Enter birthday'
                />
            </div>
            <div class='input-group-append'>
                <button class='btn btn-outline-primary2' type='submit'>Save
                    Family Member</button>
            </div>
        </form>
    </div>
</div>
<script src='/new-family-member.js'></script>